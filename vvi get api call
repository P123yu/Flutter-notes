class User {
  final int id;
  final String name;
  final String city;

  User({required this.id, required this.name, required this.city});

  factory User.fromMap(Map<String, dynamic> map) {
    return User(
      id: map['id'],
      name: map['name'],
      city: map['address']?['city'] ?? 'Unknown',
